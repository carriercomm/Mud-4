doctype html
html
  head
    title MUD
    link(rel='stylesheet', href='/normalize.css/normalize.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz', rel='stylesheet', type='text/css')
  body
    .header-content
      a.logo(href='/') BADASS LOGO
      nav.navbar
        a.play(href='/play') PLAY
        if isLoggedIn
          a(href='/profile') PROFILE (#{user._id})
          span.margin-right-15 |
          if isAdmin
            a(href='/admin') ADMIN PANEL
          a(href='/logout') LOGOUT
        else
          a(id='log-in', href='/login') LOG IN
          a(id='log-in', href='/signup') REGISTER
    .content
      nav.navbar.subnav
        a.a-selected(href='/admin/areas') AREAS
        a(href='/admin/users') USERS

      hr
      block content
    script(type='text/javascript', src='/jquery/dist/jquery.min.js')
    script(type='text/javascript', src='/underscore/underscore-min.js')
    script(type='text/javascript', src='/javascripts/sigmajs/sigma.min.js')
    script(type='text/javascript', src='/javascripts/validation.js')
    script(type='text/javascript', src='/javascripts/area.js')
