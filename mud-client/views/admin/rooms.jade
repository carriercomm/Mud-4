extends adminLayout

block content
  h2= area.name

  nav.navbar.subnav
    a#area-info-link(href='/admin/editarea/#{area._id}') Area info
    a#area-rooms-link.a-selected(href='#') Rooms
    a#area-units-link(href='#') Units
    a#area-items-link(href='#') Items

  hr

  input#areaId(type='hidden', value='#{area._id}')

  .room-options.display-none
    .grid-space-around
      span What do you want to do?
    .grid-space-around
      span.span-link#editRoomInfo Edit info
      span.span-link#addRoomExit Add exit
      span.span-link#deleteRoom Delete
      span.span-link#cancelRoomEdit Nothing

  #roomInfo.grid-space-around.display-none
    .grid-cell
      .grid-flex-start.nomargin-bottom
        span Title
      .grid-flex-start
        input#roomTitle.text(type='text')

      .grid-flex-start.nomargin-bottom
        span Description
      .grid-flex-start
        textarea#roomDescription

    .grid-cell
      .grid-flex-end
        .buttons
          section.flat
            button#editroom-button.small Save

        .buttons.margin-left-15
          section.flat
            button#cancel-editroom-button.small Cancel

  .floor
    span Floor: &nbsp;
    select.floor-select
      each floor in floors
        option(value=floor)=floor
  #rooms-nodes
